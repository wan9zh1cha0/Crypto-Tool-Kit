{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build and run AES",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-Command",
        "g++ AES.cpp -std=c++17 -O2 -Wall -o AES.exe; if ($?) { .\\AES.exe }"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
